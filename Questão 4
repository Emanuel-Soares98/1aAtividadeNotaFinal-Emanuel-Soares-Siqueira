<body>
  <div class="container">
    <h1>Calculadora de IMC</h1>

    <label for="numero1">Peso(kg):</label>
    <input type="number" id="numero1">

    <label for="numero2">Altura(m):</label>
    <input type="number" id="numero2">

    <button type="button" onclick="imc()">Calcular</button>

    <p id="result">IMC:</p>
  </div>

  <script>
    function imc() {
      const num1 = Number(document.getElementById('numero1').value);
      const num2 = Number(document.getElementById('numero2').value); 
      
      if (!num1 || !num2) {
        document.getElementById('result').textContent = 'Por favor, preencha peso e altura corretamente.';
        return;
    }
      const total = num1 / (num2 * num2);
      document.getElementById('result').textContent = `Seu IMC Ã©: ${total.toFixed(2)}`;
    }
  </script>
