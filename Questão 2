    }

    input {
      display: block;
      width: 100%;
      padding: 10px;
      margin-bottom: 15px;
      box-sizing: border-box;
    }

    button {
      display: block;
      width: 50%;
      margin: 0 auto 15px;
      padding: 10px;
      background-color: blue;
      color: white;
      border: none;
