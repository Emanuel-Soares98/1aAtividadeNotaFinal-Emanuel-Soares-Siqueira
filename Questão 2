<body>
  <div class="container">
    <h1>Calculadora de Somas</h1>

    <label for="numero1">Primeiro Número:</label>
    <input type="number" id="numero1">

    <label for="numero2">Segundo Número:</label>
    <input type="number" id="numero2">

    <button type="button" onclick="soma()">Somar</button>

    <p id="result">Resultado:</p>
  </div>

  <script>
    function soma() {
      const num1 = Number(document.getElementById('numero1').value) || 0;
      const num2 = Number(document.getElementById('numero2').value) || 0; 
      const total = num1 + num2;
      document.getElementById('result').textContent = `Resultado: ${total}`;
    }
  </script>
